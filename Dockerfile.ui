FROM python:3.10-slim AS builder

WORKDIR /install

RUN apt-get update && apt-get install -y --no-install-recommends \
    curl && rm -rf /var/lib/apt/lists/*

COPY requirements_ui.txt .
RUN pip install --prefix=/install --no-cache-dir -r requirements_ui.txt


# ---------- Runtime ----------
FROM python:3.10-slim

WORKDIR /app
COPY --from=builder /install /usr/local

# ğŸ“‚ ì• í”Œë¦¬ì¼€ì´ì…˜ íŒŒì¼ ë³µì‚¬
COPY web ./web

# ğŸ§¾ í™˜ê²½ ë³€ìˆ˜ íŒŒì¼ (.env optional)
RUN if [ -f .env ]; then \
        echo "âœ… Found .env file, copying..."; \
        cp .env ./.env; \
    else \
        echo "âš ï¸ No .env found, skipping .env copy"; \
    fi

EXPOSE 8501

CMD ["streamlit", "run", "web/streamlit_app.py", "--server.port=8501", "--server.address=0.0.0.0"]
